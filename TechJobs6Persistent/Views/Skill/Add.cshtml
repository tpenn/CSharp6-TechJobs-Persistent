@model TechJobs6Persistent.Models.Skill

<h1>Add New Skill</h1>

<form asp-controller="Skill" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="SkillName">Skill Type: </label>
        <input asp-for="SkillName" />
        <span asp-validation-for="SkillName"></span>
    </div>

    <br />

    <input type="submit" value="Add new skill" />

</form>
